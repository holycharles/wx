/**app.wxss**/
page {
  height: 100%;
  background: #f3f3f3;
  box-sizing: border-box;
}
.container {
  font-size: 30rpx;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  box-sizing: border-box;
} 
.wingblank {
   padding: 0 30rpx!important;
}
.container .scroll {
  flex: 1;
  height: 1026rpx;
}

.container .scroll scroll-view {
   height: auto;
   
}
.article-wrap {
   padding-bottom: 80rpx;
}
.topfix {
   width: 100%;
   height: 80rpx;
   border-top: 1rpx solid #d2d2d2; 
   border-bottom: 1rpx solid #d2d2d2; 
   display: flex;
   line-height: 80rpx;
   background: #fff;
   align-items:center;
}

.topfix view {
   flex: 1;
   text-align: center;
   font-size: 30rpx;
   color: #888888;
   height: 30rpx;
   line-height: 30rpx;
   border-left: 1rpx solid #d2d2d2;
}
.topfix view.on {
    color: #32c8c8;
}
.topfix navigator:nth-of-type(1) {
  border-left: 0;
}
