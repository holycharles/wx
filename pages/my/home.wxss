/* pages/my/home.wxss */
@import '/pages/index/index.wxss';
page {
   background: #fff;
   font-size:30rpx;

}
.card-wrap {
   width: 100%;
   background: #fff;
   overflow: hidden;
   box-sizing: border-box;
}

.card-wrap .card {
	 height: 320rpx;
   position: relative;
}

.card-wrap .card image, 
.card-wrap .card .content {
    width: 100%;
	  height: 100%;
    position: absolute;
}

.card-wrap .avstar {
   width: 156rpx;
   height: 156rpx;
   border: 1rpx solid #5c5c5c;
   display: flex;
   align-items: center;
   justify-content: center;
   border-radius: 50%;
   margin: 0 40rpx 0 48rpx;
}
.card-wrap .content .top {
   display: flex;
   color: #fff;
   height: 237rpx;
   align-items: center;
}
.card-wrap .content .top .info {
   display: flex;
   flex-direction: column;
   font-size: 26rpx;
}
.card-wrap .content .top .name {
   font-size: 34rpx;
   font-style: normal;
}
.card-wrap .avstar image{
   width: 140rpx;
   height: 140rpx;
   border-radius: 50%;
}

.card-wrap .intro {
  height: 64rpx;
	font-size: 22rpx;
	line-height: 30rpx;
	color: #969696;
  margin-left: 50rpx;
  padding-left: 20rpx;
  border-left:4rpx solid rgba(50, 200, 200, 1);
  padding-right: 30rpx;
}

.location {
   position: absolute;
   right: 30rpx;
   top: 30rpx;
   z-index: 3;
   font-size: 22rpx;
	line-height: 40rpx;
	color: #969696;
   display: flex;
}

.location text {
    margin-left: 30rpx;
}
.card-wrap .card .location image {
   width: 22rpx;
   height: 22rpx;
   position: inherit;
   vertical-align: middle;
   margin: 9rpx 10rpx 0 0;

}