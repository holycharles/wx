  </view>
  <view class="uploadwrap">
        <image src="/images/my/add.png"></image>
        <text>请上传身份证正面照片</text>
  </view>
  <view class="uploadwrap mt20">
        <image src="/images/my/add.png"></image>
        <text>请上传身份证背面照片</text>
  </view>
</view>