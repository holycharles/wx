    <view class="selectbox inputwrap">
         <text class="title">姓名</text>
         <input placeholder="请输入真实姓名" auto-focus/>
    </view>
    <view class="selectbox inputwrap">
         <text class="title">身份证</text>
         <input placeholder="请输入身份证号码" auto-focus/>
