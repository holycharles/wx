/* pages/my/card.wxss */
.card-wrap {
   width: 100%;
   height: 100%;
   background: #fff;
   overflow: hidden;
   border-top: 1rpx solid #d2d2d2;
   box-sizing: border-box;
}

.card-wrap .card {
   width: 690rpx;
	 height: 400rpx;
	 border-radius: 30rpx;
   background: red;
   margin: 30rpx auto 0;
   position: relative;
}

.card-wrap .card image, 
.card-wrap .card .content {
    width: 100%;
	  height: 100%;
    position: absolute;
}

.card-wrap .avstar {
   width: 156rpx;
   height: 156rpx;
   border: 1rpx solid #5c5c5c;
   display: flex;
   align-items: center;
   justify-content: center;
   border-radius: 50%;
   margin: 0 40rpx 0 48rpx;
}
.card-wrap .content .top {
   display: flex;
   color: #fff;
   height: 274rpx;
   align-items: center;
}
.card-wrap .content .top .info {
   display: flex;
   flex-direction: column;
   font-size: 26rpx;
   font-style:oblique;
}
.card-wrap .content .top .name {
   font-size: 34rpx;
	 color: #32c8c8;
   font-style: normal;
}
.card-wrap .avstar image{
   width: 140rpx;
   height: 140rpx;
   border-radius: 50%;
}

.card-wrap .content .bottom {
   display: flex;
   color: #fff;
   align-items: center;
   font-size: 22rpx;
   flex-direction: column;
   padding: 0 25rpx;
}

.card-wrap .content .bottom image {
   width: 22rpx;
   height: 22rpx;
   position: inherit;
   vertical-align: middle;
   margin: 6rpx 10rpx 0 0;
}

.card-wrap .content .bottom .block {
   width: 100%;
   display: flex;
   justify-content: space-between;
   margin-bottom: 10rpx;
}

.card-wrap .content .bottom .block view {
   display: flex;
}