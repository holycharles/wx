/* pages/my/industry.wxss */
.container {
    background: #ffffff;
}
.industry-wrap {
   display: flex;
   flex-wrap: wrap;
}
.industry-wrap view {
    width: 372rpx;
    height: 100rpx;
    background: #f3f3f3;
    margin-bottom: 6rpx;
    font-size: 26rpx;
	  color: #353535;
    line-height: 100rpx;
    padding-left: 31rpx;
    box-sizing: border-box;
}
.industry-wrap view.on { 
    border-bottom: 6px solid #32c8c8;
}
.industry-wrap view:nth-of-type(2n) {
    margin-left: 6rpx;
}