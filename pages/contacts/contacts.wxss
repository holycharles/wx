/* pages/contacts/contacts.wxss */
.contacts-bg {
  height: 88rpx;
  background: #fff;
  border-top: #f0f0f0 1rpx solid;
}

.contacts-input {
  background: #f3f3f3;
  border-radius: 30rpx;
  height: 60rpx;
  margin: 14rpx 35rpx;
  padding: 0 30rpx;
  font-size: 30rpx;
}

.input-placeholder {
  text-align: center;
  /* background:url(/images/contact/add_icon_search.png) no-repeat 40% center;
background-size:40rpx 40rpx; */
}

/* .contacts-sorting-bg {
  display: flex;
